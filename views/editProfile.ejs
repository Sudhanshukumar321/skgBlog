<%- include('./layouts/header.ejs') %>

<div class="w-[100%] h-[100vh] bg-red-200 flex justify-center items-center">
    <div
      class="w-auto lg:w-[40%] h-auto border-2 border-black lg:flex justify-center items-center m-4 p-4 pt-1"
    >
      <div class="flex justify-center flex-col gap-y-2 p-2">
        <div class="text-center w-[100%] border-b-4 border-black p-2 mb-4">
          <h1 class="font-bold lg:text-3xl md:text-2xl">Edit Account</h1>
        </div>
        <form
          method="POST"
          class="flex justify-center flex-col gap-y-2"
        >
          <div>
            <div>
              <label for="name">Name</label>
              <input
                required
                class="p-1 w-[100%] outline-none border-[1px] border-slate-500"
                type="text"
                id="name"
                value="<%= user.name %>"
                placeholder="Your Name"
                name="name"
              />
            </div>
          </div>
          <div>
            <div>
              <label for="about"
                >About Yourself</label
              >
              <textarea
                required
                type="text"
                placeholder="About Yourself"
                name="about"
                id="about"
                class="w-[100%] border-[1px] border-slate-500"
              ><%= user.about %></textarea>
            </div>
          </div>
          <div>
            <div class="flex gap-6 items-center">
              <input
                class="w-[50%] outline-none border-none bg-red-500 px-4 py-2 rounded-[5px] cursor-pointer text-white hover:bg-red-800"
                type="submit"
                value="Save"
              />
              <a href="/api/v1/profile" class="w-[50%] outline-none border-none bg-red-500 px-4 py-2 rounded-[5px] text-center text-white hover:bg-red-800"
              >Back</a>
            </div>
          </div>
        </form>
      </div>
    </div>
</div>

<% if(typeof message !== 'undefined'){ %>
<p class="text-red-600"><%= message %></p>
<% } %> 

<%- include('./layouts/footer.ejs') %>
