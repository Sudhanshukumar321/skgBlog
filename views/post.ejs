<%- include('./layouts/header.ejs') %>

<div class="w-[100%] flex flex-col items-center gap-6">
  <%- include('./common/header.ejs') %>

  <div class="w-[80%] flex flex-col gap-10">
    <div class="flex justify-center items-center w-[100%]">
      <div class="w-[50%]">
        <h1 class="font-bold text-3xl uppercase"><%= post.title %></h1>
        <p class="text-slate-300 my-2 text-sm italic">
          Posted on <%= post.createdAt %> By- <%= post.createdBy.name %>
        </p>
        <div class="flex justify-center w-fit gap-2 items-center text-sm">
          <span class="p-1 bg-green-300 rounded-sm">Web Design</span>
          <span class="p-1 bg-green-300 rounded-sm">MERN Stack</span>
        </div>
      </div>
      <div class="w-[50%] flex flex-col items-end justify-end">
        <div class="p-2 w-[60%] bg-slate-200">
          <p>Search</p>
        </div>
        <div
          class="flex justify-center items-center p-2 w-[60%] border-2 border-slate-200"
        >
          <form class="flex">
            <input
              type="text"
              placeholder="Search..."
              class="p-2 w-[100%] outline-none text-slate-500 rounded-l-sm rounded-t-sm border-2 border-slate-200"
            />
            <input
              type="submit"
              class="hover:cursor-pointer bg-blue-500 p-2 w-fit outline-none border-none rounded-r-sm rounded-b-sm"
              value="Go!"
            />
          </form>
        </div>
      </div>
    </div>

    <div class="lg:w-[60%] flex flex-col gap-2 flex-wrap">
      <img
        src="<%= post.image %>"
        alt="image"
        class="max-h-[400px] w-[100%]"
      />

      <div class="mb-4">
        <button><i class="fa-solid fa-heart text-xl text-red-500"></i></button>
        <span>2</span>
      </div>

      <div class="lg:w-[100%]">
        <span class="capitalize">
          <%= post.content %>
        </span>
      </div>
    </div>

    <div>
        
    </div>
  </div>

  <%- include('./common/footer.ejs') %>
</div>

<%- include('./layouts/footer.ejs') %>
