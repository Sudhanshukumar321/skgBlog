<div
    class="z-[9999] absolute top-2 left-2 burger cursor-pointer font-bold text-xl"
    onclick="profileMenuControl()"
  >
    &#9776;
  </div>
<div
  class="profileMenu hidden md:static absolute top-0 left-0 bg-black text-white font-bold lg:w-3/12 min-w-1/4 min-h-[100vh]"
>
  <a href="/changeProfileImage">
    <div
      class="w-[80px] h-[80px] bg-red-300 rounded-[50%] mt-6 ml-6 relative group"
    >
      <img
        src="<%= user.profileImage %>"
        alt="profile"
        class="w-fit rounded-[50%] w-[80px] h-[80px]"
      />
      <div
        class="invisible group-hover:visible cursor-pointer absolute top-0 left-0 rounded-[50%] w-[80px] h-[80px] bg-slate-100 opacity-60 flex justify-center items-center"
      >
        <span class="text-black"><i class="fa-solid fa-camera"></i></span>
      </div>
    </div>
  </a>

  <div class="flex items-center flex-col md:pr-0 pr-4">
    <ul class="flex items-start flex-col w-[100%] mt-6">
      <li class="p-2 pl-8 w-[100%] hover:bg-red-300">
        <a href="/dashboard"
          ><i class="fa-solid fa-arrows-to-dot mr-2"></i> Dashboard</a
        >
      </li>
      <li class="p-2 pl-8 w-[100%] hover:bg-red-300">
        <a href="/profile"><i class="fa-solid fa-user mr-2"></i> My Profile</a>
      </li>
      <li class="p-2 pl-8 w-[100%] hover:bg-red-300">
        <a href="/createPost"
          ><i class="fa-solid fa-plus mr-2"></i> Create Post</a
        >
      </li>
      <li class="p-2 pl-8 w-[100%] hover:bg-red-300">
        <a href="/"><i class="fa-solid fa-house mr-2"></i> Home</a>
      </li>
      <li class="p-2 pl-8 w-[100%] hover:bg-red-300">
        <a href="/logout"
          ><i class="fa-solid fa-right-from-bracket mr-2"></i> LogOut</a
        >
      </li>
    </ul>
  </div>
</div>

<script>
    function profileMenuControl() {
      const profileMenu = document.querySelector('.profileMenu');
      const burger = document.querySelector('.burger');
      if (profileMenu.classList.contains('hidden')) {
        profileMenu.classList.remove('hidden');
        burger.style.color = "white";
        burger.innerHTML = "&#9587;";
      } else {
        profileMenu.classList.add('hidden');
        burger.style.color = "black";
        burger.innerHTML = "&#9776;";
      }
    }
  </script>
