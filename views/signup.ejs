<%- include('./layouts/header.ejs') %> 

<div class="flex justify-between items-center flex-col w-[100%] h-[100vh]">
  <%- include('./common/header.ejs') %>
  <div class="container lg:flex justify-between items-center ">
    <div
      class="w-[100%] lg:w-[40%] h-auto border-2 border-black lg:flex justify-center items-center m-4 p-4 pt-1"
    >
      <div class="flex justify-center flex-col gap-y-2 p-2">
        <div class="text-center w-[100%] border-b-4 border-black p-2 mb-4">
          <h1 class="font-bold lg:text-3xl md:text-2xl">Create Account</h1>
        </div>
        <form
          action=""
          method="POST"
          enctype="multipart/form-data"
          class="flex justify-center flex-col gap-y-2"
        >
          <div>
            <div>
              <label for="name">Name<sup class="text-red-500">*</sup></label>
              <input
                required
                class="p-1 w-[100%] outline-none border-[1px] border-slate-500"
                type="text"
                id="name"
                placeholder="Your Name"
                name="name"
              />
            </div>
          </div>
          <div>
            <div>
              <label for="password">Password<sup class="text-red-500">*</sup></label>
              <input
                required
                class="p-1 w-[100%] outline-none border-[1px] border-slate-500"
                type="password"
                id="password"
                placeholder="Enter Password"
                name="password"
              />
            </div>
          </div>
          <div>
            <div>
              <label for="password">Email<sup class="text-red-500">*</sup></label>
              <input
                required
                class="p-1 w-[100%] outline-none border-[1px] border-slate-500"
                type="email"
                id="email"
                placeholder="Enter Email"
                name="email"
              />
            </div>
          </div>
          <div>
            <div>
              <label for="blogType">Blog Type<sup class="text-red-500">*</sup></label>
              <input
                required
                class="p-1 w-[100%] outline-none border-[1px] border-slate-500"
                type="text"
                id="blogType"
                placeholder="Blog Type"
                name="blogType"
              />
            </div>
          </div>
          <div>
            <div>
              <label for="profileImage">Profile Image<sup class="text-red-500">*</sup></label>
              <input
                required
                class="p-1 w-[100%] outline-none border-[1px] border-slate-500"
                type="file"
                id="profileImage"
                placeholder="profile Image"
                name="profileImage"
              />
            </div>
          </div>
          <div>
            <div>
              <label for="about">About Yourself<sup class="text-red-500">*</sup></label>
              <textarea
                required
                type="text"
                placeholder="About Yourself"
                name="about"
                id="about"
                class="w-[100%] border-[1px] border-slate-500"
              ></textarea>
            </div>
          </div>
          <div>
            <div>
              <input
                class="w-[100%] outline-none border-none bg-red-500 px-4 py-2 rounded-[5px] cursor-pointer text-white hover:bg-red-800"
                type="submit"
                value="Create"
              />
            </div>
          </div>
        </form>
      </div>
    </div>

    <div class="lg:w-[55%] w-[100%] h-auto mb-2 flex justify-center items-center">
      <img src="assets/1.webp" alt="image" class="shadow-2xl" />
    </div>
  </div>
  <%- include('./common/footer.ejs') %> 
</div>

<% if(typeof message !== 'undefined'){ %>
<p class="text-red-600"><%= message %></p>
<% } %>  <%-
include('./layouts/footer.ejs') %>
